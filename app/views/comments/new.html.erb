<section class="container">
    <div class="comment-form">
        <h3>Add Comment</h3>
        <%= form_with(model: @comment, url: user_post_comments_url(@post.author, @post), local: true) do |form| %>
            <div class="comments">  
                <%= form.text_area :text %>
            </div>
            <div>
                <%= form.submit 'Create Comment', class: 'comment-btn'%>
            </div>
        <% end %>
    </div>
</section>